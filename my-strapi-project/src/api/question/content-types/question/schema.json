{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "Question"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "phoneNumber": {
      "type": "string",
      "required": true
    },
    "reqStatus": {
      "type": "enumeration",
      "required": false,
      "default": "Đang xử lý",
      "enum": [
        "Đang xử lý",
        "Đã phản hồi"
      ]
    },
    "message": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "answer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::answer.answer",
      "mappedBy": "question"
    },
    "fcmToken": {
      "type": "string"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "questions"
    }
  }
}
